<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="MineFragHandleListener"
            type="com.example.mymusicplayer.databindinglistener.MineFragHandleListener" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragment.MineFragment">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/local"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/find_local_music"
                        android:src="@mipmap/bag"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:onClick="@{MineFragHandleListener::onButtonClicked}"/>

                    <ImageView
                        android:id="@+id/cloud_disk"
                        android:src="@mipmap/cloud"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"/>

                    <ImageView
                        android:id="@+id/star"
                        android:src="@mipmap/star"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"/>

                    <ImageView
                        android:id="@+id/radio"
                        android:src="@mipmap/radio"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/create_list"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/local"
                android:layout_marginTop="30dp"
                android:text="创建歌单"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/collect_list"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/local"
                android:layout_alignParentRight="true"
                android:layout_marginTop="30dp"
                android:text="收藏歌单"
                android:textSize="20sp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/music_lists"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/create_list">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:text="创建歌单"
                        android:textSize="15sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <ImageView
                        android:id="@+id/create_new"
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:layout_marginRight="3dp"
                        android:layout_toLeftOf="@id/delete_all"
                        android:onClick="@{MineFragHandleListener::onButtonClicked}"
                        android:src="@mipmap/add" />

                    <ImageView
                        android:id="@+id/delete_all"
                        android:src="@mipmap/trash_bin"
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:onClick="@{MineFragHandleListener::onButtonClicked}"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/songlist_root"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@id/delete_all"/>
                </RelativeLayout>

            </androidx.cardview.widget.CardView>

        </RelativeLayout>

    </FrameLayout>
</layout>